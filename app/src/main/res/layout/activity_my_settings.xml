<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBody"
    tools:context=".ui.personalcenter.MySettingsActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/mineSetTitleBar"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/ic_back"
        app:lineVisible="false"
        android:fitsSystemWindows="true"
        app:title="我的设置"
        />

    <TextView
        android:id="@+id/mineSetUpdatePhone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        android:paddingEnd="16dp"
        android:text=" 修改手机号"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_text_color"
        android:textSize="15sp"
        app:drawableEndCompat="@drawable/ic_arrow_right_gray" />

    <TextView
        android:id="@+id/mineSetUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="1dp"
        android:text=" 修改密码"
        android:textColor="@color/primary_text_color"
        android:textSize="15sp"
        app:drawableEndCompat="@drawable/ic_arrow_right_gray" />




    <TextView
        android:id="@+id/mineSetAgreement"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        android:paddingEnd="16dp"
        android:text=" 用户协议"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_text_color"
        android:textSize="15sp"
        app:drawableEndCompat="@drawable/ic_arrow_right_gray" />

    <TextView
        android:id="@+id/mineSetPolicy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="1dp"
        android:text=" 隐私政策"
        android:textColor="@color/primary_text_color"
        android:textSize="15sp"
        app:drawableEndCompat="@drawable/ic_arrow_right_gray" />

    <FrameLayout
        android:id="@+id/mineSetClearCache"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingStart="21dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="清除缓存"
            android:textColor="@color/primary_text_color" />

        <TextView
            android:id="@+id/mineSetCacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:textColor="@color/primary_text_color"
            tools:text="100M" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mineSetVersion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingStart="21dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="软件版本"
            android:textColor="@color/primary_text_color" />

        <TextView
            android:id="@+id/mineSetVersionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:textColor="@color/primary_text_color"
            tools:text="v1.0.0" />
    </FrameLayout>

    <TextView
        android:id="@+id/mineSetWriteOff"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="1dp"
        android:text=" 注销账号"
        android:textColor="@color/primary_text_color"
        android:textSize="15sp"
        app:drawableEndCompat="@drawable/ic_arrow_right_gray" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mineSetLogoutBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:text="退出登录"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>