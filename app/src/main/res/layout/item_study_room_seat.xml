<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_study_room"
    android:layout_width="match_parent"
    android:layout_height="125dp"

  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itStuRoSeatHave"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="visible"
        android:layout_height="125dp">

        <TextView
            android:id="@+id/itStuRoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:text="碎冰威士忌"
            android:textColor="@color/primary_text_color"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/itStuRoimageView"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/bg_study_tag_record_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itStuRoTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签"
            android:textColor="@color/primary_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/itStuRoimageView"
            app:layout_constraintEnd_toEndOf="@+id/itStuRoimageView"
            app:layout_constraintStart_toStartOf="@+id/itStuRoimageView"
            app:layout_constraintTop_toTopOf="@+id/itStuRoimageView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itStuRoUserPro"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="9dp"
            android:scaleType="centerCrop"
            android:src="@drawable/def_path"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            app:shapeAppearance="@style/CircleStyle" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/itStuRoSeat"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="match_parent">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/primary_text_color"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里有个空座位\n立即开始学习吧！"
            android:drawableTop="@drawable/ic_seat"
            android:drawablePadding="12sp" />
    </FrameLayout>

</FrameLayout>