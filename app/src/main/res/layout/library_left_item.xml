<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/leftLibraryImg"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/def_path"
        app:layout_constraintBottom_toTopOf="@+id/leftLibraryName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/RoundedStyle"
        app:strokeColor="@color/white"
        app:strokeWidth="4dp" />

    <TextView
        android:id="@+id/leftLibraryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图书馆"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/leftLibraryCount"
        app:layout_constraintEnd_toEndOf="@+id/leftLibraryImg"
        app:layout_constraintStart_toStartOf="@+id/leftLibraryImg"
        app:layout_constraintTop_toBottomOf="@+id/leftLibraryImg" />

    <TextView
        android:id="@+id/leftLibraryCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0人自习中"
        android:textColor="@color/brightBlue_2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/leftLibraryImg"
        app:layout_constraintStart_toStartOf="@+id/leftLibraryImg"
        app:layout_constraintTop_toBottomOf="@id/leftLibraryName"
        tools:layout_editor_absoluteY="151dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rightLibraryImg"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="40dp"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/def_path"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftLibraryCount"
        app:srcCompat="@drawable/def_path"
        app:shapeAppearance="@style/RoundedStyle"
        app:strokeColor="@color/white"
        app:strokeWidth="4dp"
        />

    <TextView
        android:id="@+id/rightLibraryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图书馆"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/rightLibraryImg"
        app:layout_constraintStart_toStartOf="@+id/rightLibraryImg"
        app:layout_constraintTop_toBottomOf="@+id/rightLibraryImg" />

    <TextView
        android:id="@+id/rightLibraryCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0人自习中"
        android:textColor="@color/brightBlue_2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/rightLibraryImg"
        app:layout_constraintStart_toStartOf="@+id/rightLibraryImg"
        app:layout_constraintTop_toBottomOf="@+id/rightLibraryName" />


</androidx.constraintlayout.widget.ConstraintLayout>